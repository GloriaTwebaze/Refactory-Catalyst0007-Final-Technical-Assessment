doctype html
html
  head
    meta(charset='utf-8')
    |         
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    |         
    title CovidRegistrationFORM
    |         
    meta(name='description', content='')
    |         
    meta(name='viewport', content='width=device-width, initial-scale=1')
    |         
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css', rel='stylesheet', integrity='sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6', crossorigin='anonymous')
    |         
    
    link(rel='stylesheet', href='/css/form.css')
      
    body
    .card(style='width: 40rem;')
      .card-header
       
                    
      
      |                 
      h5 Ministry of Health
      |                 
      h2 COVID-19 CORONA VIRUS
      |                 
      h5 Virus Test Registration Form
      |                 
      .alert.alert-success.alert-dismissible.fade.show#alert(role='alert')
        
        | Registration was successful!
        |                   
        button#btn-close.btn-close(type='button', data-bs-dismiss='alert', aria-label='Close')
      |             
      .card-body
        form.row.g-3(method='POST', action='/', name='covidForm')
          .col-md-6
            label.form-label(for='surName') Surname
            |                       
            input#surName.form-control(type='text' ,name='surName')
            |                       
            p.surName_info.warnP
          |                     
          .col-md-6
            label.form-label(for='givenName') Given Name
            |                       
            input#givenName.form-control(type='givenName', name='givenName')
            |                       
            p.givenName_info.warnP
          |                     
          .col-6
            label.form-label(for='dob') Date Of Birth
            |                       
            input#inputAddress.form-control(type='date', name='dob',min='04-23-2020', max='04-23-2171')
            |                       
            p.dob_info.warnP
          |                     
          .col-6
            label.form-label(for='residence') Place of residence
            |                       
            input#residence.form-control(type='text', name='residence')
            |                       
            p.residence_info.warnP
          |                     
          .col-md-6
            label.form-label(for='occupation') Occupation
            |                       
            input#occupation.form-control(type='text', name='occupation')
            |                       
            p.occupation_info.warnP
          |                     
          .col-md-6
            label.form-label(for='nationality') Nationality
            |                       
            input#nationality.form-control(type='text', name='nationality')
            |                       
            p.nationality_info.warnP
          |                     
          .col-md-12
            label.form-label(for='gender') Gender
            |    
            |                     
            p.gender_info.warnP
          |                     
          .col-md-6
            .form-check.form-check-inline
              input#gender.form-check-input(type='radio', name='gender', value='male', checked='true')
              |                     
              label.form-check-label(for='gender') Male
          |                     
          .col-md-6
            .form-check.form-check-inline
              input#gender.form-check-input(type='radio', name='gender', value='female')
              |                     
              label.form-check-label(for='gender') Female
          |                     
          .col-md-12
            label#category.form-label(for='category', name='category') category
            |                       
            select#category.form-select(name='category')
              option(value='')  --select--
              |                         
              option(value='Returnee') Returnee
              |                         
              option(value='contact') Contact
              |                         
              option(value='Alert') Alert
              |                         
              option(value='voluteer') Voluteer
            |                     
            p.catergory_info.warnP
            |                     
            br
            |                     
            |                     
            .col-12
              button#button.btn.btn-primary(type='submit') Register
         
             
            script.
            script(src='/javascript/form.js')
            script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js')
            script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.bundle.min.js', integrity='sha384-b5kHyXgcpbZJO/tY9Ul7kGkf1S0CWuKcCD38l8YkeH8z8QjE0GmW1gYU5S9FOnJ0', crossorigin='anonymous')
