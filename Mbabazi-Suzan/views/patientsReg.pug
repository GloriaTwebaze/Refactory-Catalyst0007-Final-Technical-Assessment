doctype html
html(lang='en')
    head
        meta(charset='UTF-8')
        meta(http-equiv='X-UA-Compatible' content='IE=edge')
        meta(name='viewport' content='width=device-width, initial-scale=1.0')
        link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css' integrity='sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6' crossorigin='anonymous')
        link(rel='stylesheet' href='/patients.css')
        title = `${title}`
    body
        .container
            form(name='patientform' method="POST" action='/patientsReg')
                h2 Ministry of Health 
                h2.covid COVID-19(CORONA VIRUS)
                h2 Virus-Test Registration Form
                    div.form-row
                        div.col.form-group
                            label(for="validationCustom01") Surname
                            input.form-control#validationCustom01(type="text", placeholder="Surname" name="surname")
                        div.col.form-group
                            label(for="validationCustom01") Given name
                            input.form-control#validationCustom01(type="text", placeholder="Given name" name="givenname")
                        div.form-row
                            label(for="validationCustom03") Date of birth
                            input.form-control#validationCustom03(type="date", placeholder="D.o.B" name="DoB")
                        div.form-row
                            label(for="validationCustom05") Place of Residence
                            input.form-control#validationCustom05(type="text", placeholder="Residence" name="residence")
                        div.form-row
                            label(for="validationCustom04") Occupation
                            input.form-control#validationCustom04(type="text", placeholder="Occupation" name="occupation")
                        div.form-row
                            label(for="validationCustom05") Nationality
                            input.form-control#validationCustom05(type="text", placeholder="Nationality" name="nationality")
                        div.form-row
                            label.form-label(for="form-select" name="gender") Gender 
                        .form-check
                            input#defaultCheck1.form-check-input(type='checkbox')
                            label.form-check-label(for='defaultCheck1')
                            | Male
                        .form-check
                            input#defaultCheck2.form-check-input(type='checkbox')
                            label.form-check-label(for='defaultCheck2')
                            | Female  
                        .mb-3
                            label.form-label(for="form-select") Category
                            select#form-select.form-select(name="category")
                                option(selected)
                                option Tested
                                option Never tested             
                        button.btn.btn-primary(type="submit") Register
            
        script(src="/js/patients.js")                           